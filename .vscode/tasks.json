{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build KSolve",
			"command": "g++",
			"args": [
				"-g",
			//	"-m32",
			//	"-pg",
				"-O3",
			//	"-DNDEBUG",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"KSolve.cpp", 
				"-o",
				"${workspaceFolder}/KSolve"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}, 
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build unittests",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"unittests.cpp",
				"-o",
				"${workspaceFolder}/unittests"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build ran",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"-O3",
				"Game.cpp",
				"KSolveAStar.cpp",
				"ran.cpp",
				"-o",
				"${workspaceFolder}/ran"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},		{
			"type": "shell",
			"label": "C/C++: cl.exe build unittests",
			"command": "cl.exe",
			"args": [
				"/Zi",			// debug information format
				"/EHsc",		// Exception handling options
				"/Fe:",			// name EXE file
				"${workspaceFolder}\\unittests.exe",
				"Game.cpp",
				"KSolveAStar.cpp",
				"unittests.cpp" 
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
		"type": "shell",
		"label": "C/C++: cl.exe build KSolve",
		"command": "cl.exe",
		"args": [
			"/Zi",			// debug information format
			"/EHsc",		// Exception handling options
			"/O2",			// maximize speed
			"/utf-8",
			"/GL",			// Optimize across whole program
			"/Fe:",			// name EXE file
			"${workspaceFolder}\\KSolve.exe",
			"Game.cpp",
			"KSolveAStar.cpp",
			"KSolve.cpp" 
		],
		"options": {
			"cwd": "${workspaceFolder}"
		},
		"problemMatcher": [
			"$msCompile"
		],
		"group": {
			"kind": "build",
			"isDefault": true
		}
	},
	{
		"type": "shell",
		"label": "C/C++: cl.exe build ran",
		"command": "cl.exe",
		"args": [
			"/Zi",			// debug information format
			"/EHsc",		// Exception handling options
			"/O2",			// maximize speed
			"/utf-8",
			"/GL",			// Optimize across whole program
			"/Fe:",			// name EXE file
			"${workspaceFolder}\\ran.exe",
			"Game.cpp",
			"KSolveAStar.cpp",
			"ran.cpp" 
		],
		"options": {
			"cwd": "${workspaceFolder}"
		},
		"problemMatcher": [  
			"$msCompile"
		],
		"group": {
			"kind": "build",
			"isDefault": true
		}
	}
]
}