{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build KlondikeSolver",
			"command": "g++",
			"args": [
				"-g",
			//	"-m32",
			//	"-pg",
			//	"-O3",
				"Game.cpp",
				"KSolve.cpp",
				"KlondikeSolver.cpp",
				"-o",
				"${workspaceFolder}/KlondikeSolver"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build gametest",
			"command": "g++",
			"args": [
				"-g",
				"Game.cpp",
				"KSolve.cpp",
				"gametest.cpp",
				"-o",
				"${workspaceFolder}/gametest"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build speeder",
			"command": "g++",
			"args": [
				"-g",
				"-O3",
				"-DNDEBUG",
				"Game.cpp",
				"KSolve.cpp",
				"speeder.cpp",
				"-I",
				"${workspaceFolder}",
				"-o",
				"${workspaceFolder}/speeder"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}