{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build KSolverA",
			"command": "g++",
			"args": [
				"-g",
			//	"-m32",
			//	"-pg",
				"-O3",
			//	"-DNDEBUG",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"KSolverA.cpp", 
				"-o",
				"${workspaceFolder}/KSolverA"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}, 
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build unittestsa",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"unittestsa.cpp",
				"-o",
				"${workspaceFolder}/unittests"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build rana",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"-O3",
				"Game.cpp",
				"KSolveAStar.cpp",
				"rana.cpp",
				"-o",
				"${workspaceFolder}/rana"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build unittestsr",
			"command": "g++",
			"args": [
				"-g",
			//	"-O3",
				"Game.cpp",
				"KSolveRBFS.cpp",
				"unittestsr.cpp",
				"-o", "unittestsr"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}