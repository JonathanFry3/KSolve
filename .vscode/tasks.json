{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build KSolver",
			"command": "g++",
			"args": [
				"-g",
			//	"-m32",
				"-pg",
				"-O3",
				"-DNTHREADS=2",
				"-pthread",
				"Game.cpp",
				"KSolve.cpp",
				"KSolver.cpp", 
				"-o",
				"${workspaceFolder}/KSolver"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}, 
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build unittests",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
			//	"-DNTHREADS=1",
				"Game.cpp",
				"KSolve.cpp",
				"unittests.cpp",
				"-o",
				"${workspaceFolder}/unittests"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build speeder",
			"command": "g++",
			"args": [
				"-g",
				"-O3",
				//"-m32",
				"-pthread",
				"-DNDEBUG",
				"Game.cpp",
				"KSolve.cpp",
				"speeder.cpp",
				"-I",
				"${workspaceFolder}",
				"-o",
				"${workspaceFolder}/speeder"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}