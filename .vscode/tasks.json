{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++:  g++ build KSolve",
			"command": "g++",
			"args": [
				"-g",
			//	"-m32",
			//	"-pg",
				"-O3",
			//	"-DNDEBUG",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"KSolve.cpp", 
				"-o",
				"${workspaceFolder}/KSolve"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}, 
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build unittests",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"Game.cpp",
				"KSolveAStar.cpp",
				"unittests.cpp",
				"-o",
				"${workspaceFolder}/unittests"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++:  g++ build ran",
			"command": "g++",
			"args": [
				"-g",
				"-pthread",
				"-O3",
				"Game.cpp",
				"KSolveAStar.cpp",
				"ran.cpp",
				"-o",
				"${workspaceFolder}/ran"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}